<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Branco"
    android:orientation="vertical"
    tools:context=".Login"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Voltar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="366dp"
                android:src="@drawable/voltar"
                android:textColor="@color/text_primary_light"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout2"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="133dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/firasans"
                    android:gravity="center"
                    android:text="PetMaps"
                    android:textColor="@color/text_primary_light"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/firasans"
                    android:text="CADASTRO"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary_light"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/Numero"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@drawable/edittext_borderwhite"
                        android:fontFamily="@font/firasans"
                        android:hint="Número de celular"
                        android:textColorHint="@color/color_hint_text"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:textColor="#3A1A01"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/Nome"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_borderwhite"
                        android:fontFamily="@font/firasans"
                        android:hint="Nome completo"
                        android:padding="8dp"
                        android:textColor="#3A1A01"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColorHint="@color/color_hint_text"/>

                    <EditText
                        android:id="@+id/NomeUsur"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_borderwhite"
                        android:fontFamily="@font/firasans"
                        android:hint="Nome de usuário"
                        android:padding="8dp"
                        android:textColor="#3A1A01"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColorHint="@color/color_hint_text"

                        />

                    <EditText
                        android:id="@+id/SenhaCadastro"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_borderwhite"
                        android:fontFamily="@font/firasans"
                        android:hint="Senha"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:textColor="#3A1A01"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColorHint="@color/color_hint_text"

                        />

                    <EditText
                        android:id="@+id/ConfirmSenha"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_borderwhite"
                        android:fontFamily="@font/firasans"
                        android:hint="Confirmar senha"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:textColor="#3A1A01"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColorHint="@color/color_hint_text"

                        />

                    <EditText
                        android:id="@+id/Email"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_borderwhite"
                        android:fontFamily="@font/firasans"
                        android:hint="Email"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textColor="#3A1A01"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColorHint="@color/color_hint_text"
                        />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cadastroPet"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#EAA353"
                    android:fontFamily="serif-monospace"
                    android:text="Cadastrar"
                    android:textColor="@color/Branco"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="#EAA353" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/opensans"
                        android:text="ou"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="#EAA353" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/face" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/google" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/twitter" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EAA353" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Já possui conta?"
                        android:textSize="20dp"
                        android:textColor="@color/text_primary_light"
                        />

                    <TextView
                        android:id="@+id/possuocadastro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Logue-se"
                        android:textColor="#EAA353"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
